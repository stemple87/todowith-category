@if (@Model.Count == 0)
{
  <p>No collectors have been added yet!</p>
}
else
{
  <h1>Here is your list of collectors:</h1>
  <ul>
    @foreach (var collector in Model)
    {
      <li>@collector.GetDescription()</li>
    }
  </ul>
  <form action="/collectors/delete" method="post">
    <button type="submit">Clear all collectors</button>
  </form>
}
<p><a href="/collectors/new">Add a new collector</a></p>
<p><a href="/">Return home</a></p>
